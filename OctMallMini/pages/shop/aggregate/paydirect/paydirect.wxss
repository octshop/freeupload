page {
  background: white;
  height: 100%;
  overflow: hidden;
}

.oct-content {
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.pay-main {
  overflow: hidden;
  margin: 0 auto;
  margin-top: -60px;
}

.logo-icon {
  margin: 0 auto;
  margin-bottom: 40px;
}

.logo-icon image {
  box-shadow: 0px 1px 2px #ffd9ca;
  border: 4px solid #ffd9ca;
  width: 140px;
  height: 140px;
  border-radius: 100px;
  margin-bottom: 15px;
}

.logo-icon view {
  font-size: 16px;
  font-weight: bold;
  color: #404040;
}


.pay-type-direct {
  background: #ff6a00;
}

.pay-type-balance {
  background: #DB5800;
}

.pay-type image {
  width: 30px;
  height: 30px;
  margin-right: 5px;
}

.extra-link {
  width: 250px;
  display: flex;
  justify-content: space-between;
  font-size: 16px;
  margin: 0 auto;
  margin-top: 50px;
}

.extra-link navigator {
  color: #0079ae;
  Background: #ededed;
  padding: 5px 10px;
  border-radius: 30px 10px;
}




/*支付表单*/
.pay-form {
  width: 280px;
  margin: 0 auto;
  text-align: center;
  background: #fbfbfb;
  font-size: 14px;
  border-radius: 10px;
  padding: 10px;
}

  .pay-form view {
      padding: 5px 0;
  }

.pay-form-title {
  font-size: 16px;
  color: gray;
}

.pay-form-money {
  text-align: left;
}

.input-money-div {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  border-bottom: 1px solid #cecece;
  width: 200px;
  height: 40px;
  margin: 0 auto;
  font-size: 30px;
  font-weight: bold;
  color: #ff6a00;
  padding-bottom: 0;
  margin-bottom: 0;
  text-align: center;
}

  .input-money-div b {
      display: block;
  }

  .pay-form-title .balance-span{
    font-size: 12px;
  }
  .balance-span b{
    color: red;
  }

.input-money-txt {
  border: none;
  padding: 5px;
  border-radius: 10px;
  font-size: 14px;
  width: 70%;
  background: none;
  font-size: 30px;
  padding-left: 10px;
  height: 40px;
  padding-bottom: 0;
  margin-bottom: 0;
}

  .input-money-txt:hover, .input-money-txt:focus {
      border: none;
  }

.btn-pay {
  background: #ff6a00;
  color: white;
  padding: 10px;
  font-size: 14px;
  border: none;
  border-radius: 40px;
  width: 90%;
  margin-top: 30px;
  margin-bottom: 20px;
  font-weight: bold;
}


