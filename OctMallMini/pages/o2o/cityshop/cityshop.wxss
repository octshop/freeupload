/* pages/o2o/cityshop/cityshop.wxss */


/* 轮播区域区域  */
.carousel {
  width: 100%;
  background-color: rebeccapurple;
}

.carousel_swiper {
  width: 100%;
  height: 280rpx;
  display: block;
  position: relative;
  background: #f4f4f4;
}

.carouselImg {
  width: 100%;
  height: inherit;
}



/* 图标导航区 */
.carousel-icon-nav {
  background: white;
  font-size: 24rpx;
}

.nav-list {
  padding: 10rpx;
  padding-top: 25rpx;
  display: flex;
  justify-content: space-evenly;
  flex-wrap: wrap;
  align-items: center;
}

.nav-list {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.nav-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.nav-item image {
  width: 40px;
  height: 40px;
  border-radius: 6px;
  margin-bottom: 2px;
}

/*推荐商家*/
.commend-shop {
  padding: 10px 0;
  margin-top: 6px;
  background: white;
}

.commend-shop-title {
  padding: 5px 6px;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
  border-bottom: 1px solid #eaeaea;
}

.shop-title-right {
  color: #8a8a8a;
  font-size: 12px;
  font-weight: normal;
  padding-right: 0;
  display: flex;
  align-items: center;
}

.shop-title-right image {
  width: 20px;
  height: 20px;
  margin-left: 3px;
}

/*推荐商家Item*/
.commend-item {
  padding: 0 6px;
  margin: 0;
  background: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8px;
  border-bottom: 5px solid #f8f8f8;
  padding-bottom: 5px;
  font-size: 24rpx;
}

.commend-item-img {
  width: 75px;
}

.commend-item-img image {
  width: 75px;
  height: 75px;
  border-radius: 5px;
}

.commend-item-msg {
  width: 100%;
  padding-left: 8px;
}

.item-msg-title {
  font-size: 14px;
  color: #000000;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-msg-distance {
  font-size: 12px;
}

.item-msg-appraise {
  font-size: 12px;
  color: gray;
}

.item-msg-appraise image {
  width: 10px;
  height: 10px;
}

.item-msg-badge {
  font-size: 10px;
  margin-top: 10rpx;
}

.item-msg-badge span {
  display: inline-block;
  background: #ffe0ae;
  color: #ff0000;
  font-size: 10px;
  border-radius: 5px;
  padding: 1px 5px;
  margin-right: 10rpx;
}

.item-msg-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-msg-price b {
  color: red;
  font-size: 16px;
  padding-right: 5px;
  font-weight: bold;
}

.item-msg-sale {
  color: #9f9f9f;
  font-size: 12px;
}