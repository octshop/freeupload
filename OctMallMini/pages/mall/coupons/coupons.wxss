/* pages/mall/coupons/coupons.wxss */

/*----优惠券列表-----*/
.goods-list {
  padding: 0;
  margin: 0;
}

.goods-item {
  padding: 6px;
  margin-bottom: 6px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: white;
  font-size: 12px;
}

.goods-item-img {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  border-radius: 5px;
  width: 380px;
  height: 90px;
  overflow: hidden;
  text-align: center;
  margin: 0 auto;
  margin-right: 10px;
  background: -webkit-linear-gradient(left, #FD7C4B, #FF5200);
  /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #FD7C4B, #FF5200);
  /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #FD7C4B, #FF5200);
  /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #FD7C4B, #FF5200);
  /* 标准的语法（必须放在最后） */
}

.coupons-price-div {
  font-size: 14px;
  margin-bottom: 3px;
}

.coupons-price-div b {
  font-weight: bold;
}

.goods-item-msg {
  width: 200%;
}

.goods-item-msg .goods-item-title {
  height: 25px;
  margin-bottom: 20px;
}

.goods-item-title span {
  font-size: 12px;
  color: #9f9f9f;
}

/*标签区*/
.coupons-label-span {
  font-size: 10px;
  color: red;
  display: flex;
  flex-wrap: wrap;
}

.coupons-label-span span {
  background: #FFD889;
  border-radius: 15px;
  color: red;
  padding: 2px 5px;
  font-size: 10px;
  margin-right: 5px;
  margin-bottom: 5px;
}


.goods-item-badge span {
  background: #ffd800;
  border-radius: 5px;
  color: red;
  padding: 2px 5px;
  font-size: 10px;
}

.goods-item-price {
  padding: 5px 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-bottom: 0;
}

.goods-item-price b {
  font-size: 14px;
  color: #ff0000;
  padding-right: 10px;
}

.goods-item-price span {
  background: #ffd889;
  color: red;
  border-radius: 10px;
  font-size: 10px;
  padding: 0px 5px;
}

.goods-item-integral {
  margin-left: 8px;
  text-align: center;
  border-left: 1px solid #eeeeee;
  padding-left: 8px;
}

/*领取按钮*/
.goods-item-integral .btn-get {
  background: #ff6a00;
  color: white;
  border-radius: 20px;
  border: none;
  padding: 5px 20px;
  font-weight: normal;
  font-size: 12px;
}

.expend-integral {
  font-weight: bold;
  font-size: 18px;
  color: #ff0000;
}




/* --------------查询类别导航-------------------*/
.oct-header-bottom-nav {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  left: 0;
  position: fixed;
  background: white;
  width: 100%;
  z-index: 2000;
}

.oct-header-bottom-nav view {
  color: #000000;
  text-align: center;
  font-size: 30rpx;
  padding: 8px 0;
}

.oct-header-bottom-nav .nav-item-current {
  color: red;
}

.oct-header-bottom-nav view image {
  width: 12px;
  height: 12px;
}

.oct-content {
  padding: 20rpx 10rpx;
}

/* 价格 */
.oct-header-bottom-nav .filter-price {
  width: 50px;
}

/* 筛选 */
.oct-header-bottom-nav .filter-where {
  width: 50px;
  font-size: 32rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.oct-header-bottom-nav .filter-where image {
  width: 35rpx;
  height: 35rpx;
  margin-top: 10rpx;
}



/* 弹出层- 条件选择 */
.oct-header-bottom-nav .filter-area {
  display: flex;
  align-items: center;
  justify-content: center;
  color: red;
}

.oct-header-bottom-nav .filter-other-cur {
  color: red;
}

.oct-header-bottom-nav .filter-area image {
  width: 6px;
  height: 6px;
  margin-left: 5px;
}

/* 条件选择层区 */
.all-filer-show {
  clear: both;
  background: white;
  padding: 6px;
  padding-bottom: 20rpx;
  position: fixed;
  top: 80px;
  left: 0;
  z-index: 10000;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  font-size: 25rpx;
  border-bottom: 1px solid #E0E0E0;
  overflow: hidden;
}

/* 地区选择样式 */
.filer-area-win {
  width: 100%;
  height: 100px;
  overflow-y: auto;
  overflow-x: hidden;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
}

.filer-area-win view {
  font-size: 12px;
  background: #EDEDED;
  padding: 0px 6px;
  margin: 5px;
  border-radius: 5px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 25px;
}

.filer-area-win view.sel-filter-cur {
  color: white;
  background: #ff6a00;
}