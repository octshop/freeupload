
.shop-search {
  position: fixed;
  left: 0;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #F0F0F0;
  overflow: hidden;
  padding-bottom: 0;
  width: 100%;
  height: 30px;
  z-index: 10;
  background: #ffffff;
  overflow: hidden;
  align-items: center;
  padding: 10px;
}

.oct-header-mid {
  width: 100%;
  display: flex;
  align-items: center;
}

.oct-header-right {
  width: 65px;
  font-size: 24rpx;
  text-align: center;
  color: black;
  padding-right: 30rpx;
  padding-top: 15rpx;
  height: 40px;
}

.oct-header-right image {
  width: 45rpx;
  height: 45rpx;
  margin: 0;
  padding: 0;
}

.oct-header-right view {
  padding: 0;
  margin: 0;
  margin-top: -10rpx;
  font-size: 24rpx;
}

.oct-header-mid .header-search {
  width: 100%;
  background: #dbdbdb;
  display: flex;
  align-items: center;
  border-radius: 8px;
  justify-content: space-between;
  height: 25px;
  color: #3b3b3b;
  font-weight: normal;
  padding: 10rpx;
  margin-right: 10rpx;
}

.header-search image {
  width: 22px;
  height: 20px;
  margin-right: 5px;
}

.header-search .search-txt {
  border: none;
  background: #dbdbdb;
  width: 100%;
  font-size: 35rpx;
  text-align: left;
}

/*---------- 店铺列表---------- */
.goods-list {
  padding: 0;
  margin-top: -10px;
}

/*店铺列表*/
.goods-list .goods-item {
  background: white;
  padding: 15px 8px;
  margin-top: 6px;
  font-size: 12px;
  overflow: hidden;
  padding-bottom: 10px;
}


.shop-item-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  border-bottom: 1px solid #F5F5F5;
  padding-bottom: 4px;
}

.shop-item-left {
  display: flex;
  justify-content: flex-start
}

.shop-item-left image {
  width: 40px;
  height: 40px;
  border-radius: 3px;
  margin-right: 5px;
}

.shop-name-right {
  color: gray;
  margin-top: -10rpx;
}

.shop-name-right view {
  padding-bottom: 0px;
  color: #000000;
}

.shop-name-title {
  font-size: 14px;
  font-weight: bold;
}

.shop-name-right span {
  background: #ff6a00;
  color: white;
  border-radius: 5px;
  padding: 0 5px;
  font-size: 24rpx;
  white-space: nowrap;
}

.shop-name-right .shop-name-title {
  padding-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.shop-name-right .shop-name-title span {
  font-size: 24rpx;
  background: #ff0000;
  color: white;
  font-weight: normal;
  padding: 0px 5px;
  display: inline-block;
  margin: 10rpx;
}

.shop-goods-item {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 24rpx;
  color: #dbdbdb;
}

.shop-goods-item text {
  display: block;
}

.shop-goods-item image {
  width: 10px;
  height: 10px;
  margin-right: 2px;
}

.shop-item-right {
  color: gray;
}

/*店铺商品列表*/
.shop-item-bottom {
  padding: 0;
  margin: 0;
}

.shop-goods-ul {
  padding: 0;
  margin: 0;
  margin-top: 8px;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;

}

.shop-goods-ul navigator {
  padding: 0;
  position: relative;
  overflow: hidden;
  height: 80px;
  border-radius: 3px;
  text-align: left;
  margin-bottom: 5px;
  display: block;
}

.shop-goods-ul navigator image {
  width: 80px;
  height: 80px;
  border-radius: 10rpx;
}

.shop-goods-ul .price-goods {
  position: absolute;
  bottom: 0;
  padding: 0px 2px;
  width: 100%;
  text-align: center;
  background: #000000;
  font-size: 12px;
  opacity: 0.7;
  filter: alpha(opacity=50);
  -moz-opacity: 0.7;
  -khtml-opacity: 0.7;
  color: white;
}


.shop-item-bage {
  display: flex;
  clear: both;
  padding: 15px 5px;
  padding-bottom: 0;
  padding-top: 5px;
  flex-wrap: wrap;
}

.shop-item-bage text {
  background: #ff6a00;
  color: white;
  padding: 2px 5px;
  border-radius: 15px;
  display: block;
  margin-left: 5px;
  margin-top: 8px;
}

.goods-item .shop-item-addr {
  font-size: 12px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  background: #fbfbfb;
  margin-top: 10px;
  padding-top: 8px;
  padding-bottom: 8px;
  padding-left: 8px;
  padding-right: 8px;
}

.goods-item .shop-item-addr b {
  font-weight: bold;
}

.addr-distance-span {
  color: red;
  padding-left: 5px;
}