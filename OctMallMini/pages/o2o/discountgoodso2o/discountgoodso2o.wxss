
/*商品列表*/
.goods-list {}

.goods-item {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 12px;
  background: white;
  padding: 8px 6px;
  margin-top: 6px;
  padding-bottom: 10rpx;
}
.goods-price-item{
  width: 100%;
  display: block;
}
.goods-item image {
  width: 105px;
  height: 105px;
  border-radius: 5px;
  margin-right: 8px;
  z-index: 2;
}

.goods-item .goods-price-item {
  padding-top: 0;
  margin-top: 0;
}

.goods-price {
  font-weight: bold;
  color: red;
  font-size: 14px;
}

.goods-label span {
  font-size: 10px;
  background: #f1f1f1;
  color: #f65402;
  padding: 0 3px;
  border-radius: 5px;
  margin-right: 20rpx;
}

.goods-extra {
  font-size: 12px;
  color: #979797
}

.goods-extra navigator {
  padding-left: 10px;
  padding-right: 10px;
  color: #000000;
}

.goods-img {
  position: relative;
  z-index: 2;
}

.goods-img span {
  background: #f65402;
  color: white;
  position: absolute;
  top: -5px;
  left: -5px;
  padding: 1px 5px;
  border-radius: 10px;
}

.enter-shop {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #000000;
}

.goods-price-item .goods-title {
  height: 75rpx;
  padding: 0;
  margin-top: -10rpx;
}

.goods-extra text {
  font-style: italic;
  padding-top: 3px;
  padding-bottom: 3px;
  display: block;
  font-size: 11px;
}

/* 内容导航子菜单 */
.oct-header-bottom-nav {
  display: flex;
  align-items: center;
  justify-content: center;
  left: 0;
  position: fixed;
  background: white;
  width: 100%;
  z-index: 1000;
}

.oct-header-bottom-nav view {
  width: 130px;
  color: #000000;
  text-align: center;
  padding: 20rpx 5px;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  cursor: pointer;
  justify-content: center;
}

.oct-header-bottom-nav image {
  width: 15rpx;
  height: 15rpx;
  margin-left: 10rpx;
}

/* 条件选择层区 */
.all-filer-show {
  clear: both;
  background: white;
  padding: 6px;
  padding-bottom: 20rpx;
  position: fixed;
  top: 80px;
  left: 0;
  z-index: 10000;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  font-size: 25rpx;
  border-bottom: 1px solid #E0E0E0;
  overflow: hidden;
}

/* 地区选择样式 */
.filer-area-win {
  width: 100%;
  height: 100px;
  overflow-y: auto;
  overflow-x: hidden;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
}

.filer-area-win view {
  font-size: 12px;
  background: #EDEDED;
  padding: 0px 6px;
  margin: 5px;
  border-radius: 5px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 25px;
}

.filer-area-win view.sel-filter-cur {
  color: white;
  background: #ff6a00;
}


