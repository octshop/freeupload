
@{
    Layout = null;
}

<!DOCTYPE html>

<html style="overflow: auto; overflow-x: hidden;">
<head>
    <!--
           <meta name="viewport" content="width=device-width initial-scale="1" />
       viewport是网页默认的宽度和高度，上面这行代码的意思是，网页宽度默认等于屏幕宽度（width=device-width），
       原始缩放比例（initial-scale=1）为1.0，即网页初始大小占屏幕面积的100%。 user-scalable=no  不允许缩放网页 -->
    <meta name="viewport" content="width=800,user-scalable=no" initial-scale="1" />
    <title>投诉信息</title>
    <link href="../Assets/Lib/AmazeUI-2.7.2/css/amazeui.min.css" rel="stylesheet" />
    <link href="../Assets/Lib/AdminFrame/AdminPagePublic.css" rel="stylesheet" />
    <link href="../Assets/Css/ComplainPage/ComplainMsg.css" rel="stylesheet" />

    <script src="../Assets/Lib/AmazeUI-2.7.2/js/jquery-2.2.2.min.js"></script>
    <script src="../Assets/Lib/AmazeUI-2.7.2/js/amazeui.min.js"></script>
    <script src="../Assets/Lib/PublicTool.js"></script>
    <script src="../Assets/Lib/AdminFrame/AdminPagePublic.js"></script>
    <script src="../Assets/Lib/AlertConfirmWin/AlertConfirmWin.js"></script>
    <script src="../Assets/Lib/DialogWinDrag/DialogWinDrag.js"></script>

    <script src="../Assets/Js/ComplainPage/ComplainMsg.js"></script>


</head>
<body>


    <!--========隐藏控件记录信息===========-->
    <input type="hidden" id="hidOctWapWebAddrDomain" value="@ViewBag.OctWapWeb_AddrDomain" />
    <input type="hidden" id="hidComplainStatus" value="@ViewBag.ComplainStatus" />


    <!--面包屑导航-->
    <div class="nav am-cf am-nbfc" data-am-sticky="{top:0}">
        <ul class="am-breadcrumb">
            <li><a href="../NavPage/Index" class="am-icon-home">首页</a></li>
            <li><a href="../NavPage/NavSubList?NavName=投诉管理">投诉管理</a></li>
            <li class="am-active">投诉信息</li>
        </ul>
    </div>

    <!--主体内容-->
    <div class="main am-nbfc" style="min-height: 600px;">

        <!--标题栏-->
        <div class="main-title am-cf am-nbfc">
            <div class="title-txt-div am-fl">
                <i class="am-icon-list"></i> 投诉信息
            </div>
            <div class="title-btn-div am-fl">
                <!--<button class="title-btn am-btn am-btn-xs am-btn-danger am-round" onclick="window.location.href='../TradingPage/VerifyCheckCodeOrderStatus'"><i class="am-icon-get-pocket"></i> 订单核销验证</button>-->
            </div>
        </div>

        <!--搜索栏-->
        <div class="search-bar am-btn-toolbar am-cf">

            <div class="am-btn-group am-btn-group-xs am-cf item-txt-css">
                <input type="number" class="keyword-input am-form-field am-fl" id="ComplainID_se" placeholder="投诉ID" />
            </div>

            <div class="am-btn-group am-btn-group-xs am-cf" style="width: 130px;">
                <select id="ComplainCategory_se" data-am-selected="{btnWidth:'120',btnSize: 'xs',btnStyle: 'default'}">
                    <option value=" " selected>投诉对象(不限)</option>
                    <option value="order">订单</option>
                    <option value="aftersale">售后</option>
                    <option value="shop">店铺</option>
                </select>
            </div>
            <div class="am-btn-group am-btn-group-xs am-cf" style="width: 130px;">
                <select id="ComplainType_se" data-am-selected="{btnWidth:'120',btnSize: 'xs',btnStyle: 'default'}">
                    <option value=" " selected>投诉类型(不限)</option>
                    <option value="配送问题">配送问题</option>
                    <option value="质量问题">质量问题</option>
                    <option value="发票问题">发票问题</option>
                    <option value="退款问题">退款问题</option>
                    <option value="售后问题">售后问题</option>
                    <option value="安装问题">安装问题</option>
                    <option value="店铺服务">店铺服务</option>
                    <option value="其他问题">其他问题</option>
                </select>
            </div>

            <div class="am-btn-group am-btn-group-xs am-cf" style="width: 130px;">
                <select id="ComplainStatus_se" data-am-selected="{btnWidth:'120',btnSize: 'xs',btnStyle: 'default'}">
                    <option value=" " selected>投诉状态(不限)</option>
                    <option value="商家处理">商家处理</option>
                    <option value="官方介入">官方介入</option>
                    <option value="买家确认">买家确认</option>
                    <option value="完成">完成</option>
                </select>
            </div>

            <div class="am-btn-group am-btn-group-xs am-cf item-txt-css">
                <input type="text" class="keyword-input am-form-field am-fl" id="ComplainContent_se" placeholder="投诉内容" />
            </div>
            <div class="am-btn-group am-btn-group-xs am-cf item-txt-css">
                <input type="text" class="keyword-input am-form-field am-fl" id="ExtraData_se" placeholder="订单ID.售后ID.店铺ID" />
            </div>

            <div class="datetime-div am-btn-group am-btn-group-xs am-cf" style="width: 150px;">
                <div class="am-form-group am-form-icon">
                    <i class="am-icon-calendar"></i>
                    <input type="text" id="ShopReplyDate_se" class="datetime-input am-form-field" style="background:white; width: 150px;" placeholder="回复时间" data-am-datepicker="{theme: 'success',}" readonly>
                </div>
            </div>

            <div class="datetime-div am-btn-group am-btn-group-xs am-cf" style="width: 150px;">
                <div class="am-form-group am-form-icon">
                    <i class="am-icon-calendar"></i>
                    <input type="text" id="WriteDate_se" value="@ViewBag.WriteDate" class="datetime-input am-form-field" style="background:white; width: 150px;" placeholder="投诉时间" data-am-datepicker="{theme: 'success',}" readonly>
                </div>
            </div>

            <div class="am-btn-group am-btn-group-xs am-cf" style="width: 210px;">
                <button type="button" id="btnSearch" class="search-btn am-fl am-btn am-radius am-btn-success">搜索</button>
            </div>


        </div>

        <!--表单区域-->
        <div class="table-div">

            <table class="table-content am-table-striped am-table-hover" width="100%">
                <thead>
                    <tr class="table-head am-success">
                        <td width="10%">投诉ID</td>
                        <td width="10%">投诉对象</td>
                        <td width="10%">类型</td>
                        <td width="10%">状态 </td>
                        <td width="23%">投诉内容</td>
                        <td width="15%">相关ID</td>
                        <td width="11%">投诉时间</td>
                        <td width="11%">操作</td>
                    </tr>
                </thead>
                <tbody id="TbodyTrPage">
                    <tr>
                        <td><a href="#" target="_blank">23432</a></td>
                        <td>订单</td>
                        <td>质量问题</td>
                        <td>商家处理</td>
                        <td>这个东西质量真的不咱的...</td>
                        <td><a href="#" target="_blank">订单ID:2343</a></td>
                        <td>2019-05-05 13:27:45</td>
                        <td> <button class="table-btn am-btn am-btn-default am-btn-xs am-text-secondary am-round">处理回复</button></td>
                    </tr>
                </tbody>
            </table>

            <!--表格信息操作区与分页-->
            <div class="table-exe-div am-cf">
                <div class="table-exe-btn am-fl">
                    <!--<div class="table-btn-bottom am-btn-group am-btn-group-xs">
                        <button type="button" class="am-btn am-btn-default" onclick="confirmReceiArrCb()">确认签收</button>
                    </div>-->
                </div>
                <div class="page-bar am-fr">
                    <ul class="am-pagination" id="PageBar1">
                        <li><a href="#">«</a></li>
                        <li><a href="#">1</a></li>
                        <li><span>...</span></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li class="am-active"><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#">6</a></li>
                        <li><span>...</span></li>
                        <li><a href="#">500</a></li>
                        <li><input type="text" class="page-go-text am-form-field" placeholder="跳转页" /></li>
                        <li><a href="#">»</a></li>
                    </ul>
                </div>
            </div>

            <!--备注说明-->
            <div class="memo-content">
                注意: <span>备注与说明</span>
            </div>
        </div>

    </div>





    <!---------------处理回复窗口---------------->
    <div class="reply-content-win" id="ReplyContentWin" style="display:none;">
        <div class="reply-content-main">
            <ul class="reply-content-ul">
                <li>
                    <label class="am-form-label">投诉ID:</label>
                    <a id="ComplainIDA_Win" href="#" target="_blank">…加载中…</a>
                    <label class="am-form-label">投诉对象:</label>
                    <span id="ComplainCategoryB_Win">店铺</span>
                    <label class="am-form-label">类型:</label>
                    <span id="ComplainTypeB_Win">售后问题</span>
                </li>
                <li>
                    <textarea class="reply-content-txtarea" id="ShopReplyWin" placeholder="商家处理回复内容,请准确填写！"></textarea>
                </li>
            </ul>
        </div>
    </div>







</body>
</html>
