/* pages/shop/index/index.wxss */
.oct-content {
  padding-bottom: 80rpx;
}

/*  子导航 */
/*头部*/
page .oct-header {
  height: 90px;
  padding: 0;
  margin: 0;
  overflow: hidden;
  clear: both;
  display: block;
  width: 100%;
  font-size: 12px;
  font-weight: normal;
  color: #808080;
}

.oct-header-top {
  height: 60px;
  display: flex;
  align-items: center;
  clear: both;
  overflow: hidden;
}

.oct-header-left {
  width: 40px;
  height: 40px;
  padding-left: 5px;
  margin-right: 10rpx;
}

.oct-header-left image {
  width: 40px;
  height: 40px;
  border-radius: 20px;
}

.oct-header-mid {
  display: block;
  width: 100%;
}

.oct-header .header-mid-top {
  font-size: 24rpx;
  font-weight: bold;
  padding: 0;
  color: black;
}

.oct-header .header-mid-bottom {
  font-size: 10px;
  font-weight: normal;
  padding: 0;
  display: flex;
  align-items: center;
  padding-top: 3px;
}

.header-mid-bottom span {
  display: flex;
  align-items: center;
}

.oct-header .header-mid-bottom image {
  width: 13px;
  height: 13px;
}

.oct-header-right {
  width: 120px;
  overflow: hidden;
}

.header-right-top {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  padding: 0;
}

.header-mid-bottom span image {
  margin-right: 1px;
  margin-top: -5px;
}

.header-span-val {
  color: #ff0000;
  padding-left: 5px;
  padding-right: 5px;
}

.btn-focus {
  width: 60px;
  font-size: 12px;
  border: 1px solid #dbdbdb;
  border-radius: 10px;
  /* background: url(../../Imgs/Icon/fav.png) 6px center no-repeat; */
  background-size: 16px;
  cursor: pointer;
  margin-right: 6px;
  padding-top: 1px;
  padding-bottom: 1px;
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-focus image {
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
}

.btn-home {
  border: 1px solid #dbdbdb;
  border-radius: 10px;
  width: 30px;
  padding: 1px 5px;
  text-align: center;
}

.btn-home image {
  width: 15px;
  height: 15px;
}

.header-right-bottom {
  text-align: center;
  padding-right: 20rpx;
}

.header-right-bottom span {
  font-size: 10px;
  padding-left: 5px;
}

.oct-header-bottom {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 13px;
  color: #000000;
}

.oct-header-bottom view {
  width: 70px;
  text-align: center;
  margin-left: 10px;
  margin-right: 10px;
}

.oct-header-bottom .nav-current {
  border-bottom: 2px solid #ff0000;
  text-align: center;
  color: #ff0000;
  font-weight: bold;
}

.oct-header-bottom navigator {
  padding-top: 10rpx;
  display: block;
}

.oct-header-bottom .nav-current navigator {
  color: #ff0000;
}

.oct-header-bottom .header-bottom-search {
  /* background: url(../../Imgs/Icon/buyer_query.png) left 2px no-repeat; */
  background-size: 13px;
  padding-left: 12px;
  width: 200rpx;
}

.header-bottom-search image {
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
}

/* 轮播区域 */
.carousel {
  width: 100%;
  background-color: rebeccapurple;
}

.carousel_swiper {
  width: 100%;
  height: 280rpx;
  display: block;
  position: relative;
  background: #f4f4f4;
}

.carouselImg {
  width: 100%;
  height: inherit;
}

/*导航地址*/
.address-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 6px;
  border-top: 5px solid #ebebeb;
  border-bottom: 5px solid #ebebeb;
  font-size: 24rpx;
}

.address-nav image {
  width: 20px;
  height: 20px;
}

.address-nav-left {
  padding-right: 8px;
}

.address-nav-right {
  width: 100px;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 5px 0;
}

.address-nav-right view {
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 10px;
  margin-left: 12px;
}

.address-nav-mid span {
  color: gray;
}

.address-nav-mid b {
  color: #ff6a00;
  font-weight: normal;
}

/*优惠券*/
.coupons-content {
  padding: 8px;
  border-bottom: 5px solid #ebebeb;
}

.coupons-list {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 2px;
}

.coupons-item {
  background: #fc5c16;
  color: white;
  font-size: 10px;
  padding: 5px 8px;
  text-align: center;
  border-radius: 5px;
  margin: 0 5px;
  width: 500rpx;
  overflow: hidden;
}

.coupons-item b {
  font-size: 13px;
  display: block;
  word-break: break-all;
  word-wrap: break-word;
}

.coupons-more {
  text-align: center;
  font-size: 10px;
  padding-top: 10px;
  padding-bottom: 0;
  color: #808080;
}

/*排行榜*/
.order-content {
  padding: 8px;
  border-bottom: 5px solid #ebebeb;
  font-size: 24rpx;
}

.order-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 3px 0;
}

.order-title-left {
  font-size: 13px;
  font-weight: bold;
  color: #000000;
}

.order-title-right {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-title-right span {
  padding-bottom: 5px;
  margin-right: 20rpx;
  display: block;
}

.order-current {
  color: #ff0000;
  border-bottom: 1px solid #ff0000;
  padding-left: 5px;
  padding-right: 5px;
}

.order-list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 6px;
}

.order-item {
  background: #F0F0F0;
  margin: 0 3px;
  padding: 5px;
  overflow: hidden;
  border-radius: 8px;
  padding-bottom: 10rpx;
  text-align: center;
  width: 30%;
}

.order-item image {
  width: 100px;
  height: 100px;
}

.order-item view {
  padding: 2px 0;
  padding-bottom: 0;
}

.order-item span {
  color: #a8a8a8;
  padding-bottom: 0;
  font-size: 10px;
}

/*打折商品*/
.goods-main {
  border-bottom: 5px solid #ebebeb;
  padding: 8px;
}

.goods-title {
  font-size: 12px;
  color: #808080;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 5px 0;
}

.goods-title-left {
  font-size: 13px;
  color: #000000;
  font-weight: bold;
}

/*商品列表*/
.goods-list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding-top: 5px;
}

.goods-item {
  width: 47%;
  overflow: hidden;
  background: #EDEDED;
  margin-bottom: 10px;
  border-radius: 10px;
  overflow: hidden;
  text-align: center;
}

.favgoods-main .goods-item {
  background: white;
}

.goods-img {
  overflow: hidden;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  font-size: 24rpx;
}

.goods-img image {
  width: 100%;
  height: 350rpx;
}

.goods-name {
  font-size: 12px;
  padding: 4px;
  text-align: left;
}

.goods-price {
  padding: 4px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price b {
  color: #fc5c16;
  font-weight: normal;
  font-size: 14px;
}

.goods-price span {
  background: #fc5c16;
  font-size: 12px;
  color: white;
  padding: 0 5px;
  border-radius: 20px;
}

.goods-price .goods-price-no {
  color: gray;
  text-decoration: line-through;
  background: none;
}

.goods-price .goods-stock-residue {
  color: gray;
  background: none;
}

/*猜你喜欢*/
.favgoods-main {
  background: #ebebeb;
  padding-bottom: 50px;
}

.favgoods-main .goods-title {
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  font-weight: normal;
  color: #F76C24;
}

.goods-title image {
  width: 18px;
  height: 12px;
  margin-right: 10px;
  margin-top: -2px;
}



/*页脚*/
.oct-footer {
  padding: 10rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.oct-footer view {
  width: 200rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 14px;
  text-align: center;
  overflow: hidden;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.oct-footer image {
  width: 20px;
  height: 20px;
}

/* 买单区域 */
.pay-bill {
  background: white;
  padding: 10px;
  font-size: 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pay-bill image {
  width: 20px;
  height: 20px;
}

.pay-bill-left {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-pay-bill {
  background: #FC5C16;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 7px 0px;
  border-radius: 20px;
  width: 100%;
}

.btn-pay-bill image {
  margin-right: 5px;
}

.pay-bill-right {
  display: flex;
  align-items: center;
  justify-content: center;
}

.pay-bill-right view {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 15px;
  background: #EDEDED;
  padding: 5px 10px;
  border-radius: 10px;
  white-space: nowrap;
}

.pay-bill-right view image {
  margin-right: 5px;
}