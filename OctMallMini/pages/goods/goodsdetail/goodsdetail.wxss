/* -------底部栏主体内容------ */
/* 列表 */
.scroll-view-slide {
  background: white;
}

/* 窗口标题 */
.win-slide-bottom-title {
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  padding: 10rpx 0;
  position: relative;
}

.win-slide-bottom-title text {
  position: absolute;
  top: 0;
  font-size: 24rpx;
  right: 0rpx;
  padding: 20rpx 40rpx;
  padding-top: 15rpx;
  padding-right: 20rpx;
  overflow: hidden;
}

/* 窗口主体内容 */
.win-slide-bottom-content {
  overflow: hidden;
}

/*定义选择规格窗口显示代码*/
.win-sel-spec-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  width: 100%;
  height: 100%;
  overflow: hidden;
}


.win-sel-spec-top {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 110px;
  overflow: hidden;
  padding-top: 15rpx;
  padding-left: 15rpx;
}

.win-sel-spec-content .win-spec-top-left {
  padding-right: 10px;
  width: 170px;
  overflow: hidden;
}

.win-sel-spec-content .win-spec-top-left image {
  width: 100px;
  height: 100px;
  border: 1px solid #D7D7D7;
  padding: 2px;
  border-radius: 5px;
}

.win-spec-top-right {
  font-size: 14px;
  height: 140px;
  padding-top: 48px;
  overflow: hidden;
  font-size: 12px;
  width: 100%;
  padding-left: 10px;
}

.win-spec-top-right view {
  padding-bottom: 10px;
}

.win-spec-price-view {
  font-weight: bold;
  color: #FC5109;
  font-size: 20px;
}

.am-close {
  font-size: 15px;
  font-weight: normal;
  width: 20px;
  height: 20px;
  color: #000000;
  position: absolute;
  top: 5px;
  right: 0px;
}

.win-sel-spec-content .win-sel-spec-mid {
  height: 245px;
  overflow-x: hidden;
  overflow-y: scroll;
  padding-left: 10px;
}

.win-sel-spec-mid .win-spec-type {
  padding: 10px 0;
}

.win-spec-list {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  align-items: center;
  padding: 0;
  margin: 0;
}

.win-prop-item {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  align-items: center;
  padding: 0;
  margin: 0;
}

.win-spec-list span {
  display: block;
  background: #EDEDED;
  border: 1px solid white;
  padding: 5px 15px;
  border-radius: 20px;
  cursor: pointer;
  margin: 5px;
  margin-top: 0;
  margin-left: 0;
}

.win-spec-list span:hover,
.win-spec-list .current-sel-specprop {
  background: #FFF2EA;
  border: 1px solid #FC5109;
  color: #FC5109;
}

/*数量*/
.win-sel-spec-content .win-order-number {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 5px 10px;
  text-align: left;
  width: 100%;
  overflow: hidden;
}

.win-txt-number {
  border: 1px solid #D7D7D7;
  padding: 0px;
  font-size: 14px;
  font-weight: bold;
  border-radius: 5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 150px;
  height: 30px;
  overflow: hidden;
  margin-right: 20px;
}

.input-order-number {
  width: 50px;
  border: none;
  padding: 2px;
  text-align: center;
  color: #FC5109;
}

.btn-add,
.btn-reduce {
  border: none;
  background: none;
  font-size: 16px;
  font-weight: bold;
  padding: 5px 15px;
}

.btn-add {
  border-left: 1px solid #D7D7D7;
}

.btn-reduce {
  border-right: 1px solid #D7D7D7;
}


/*加入购物车，立即购买*/
.win-btn-list {
  padding: 0;
  margin: 0;
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}

.win-btn-scart,
.win-btn-order {
  width: 50%;
  text-align: center;
  font-weight: bold;
  font-size: 20px;
  color: white;
  background: #FEA700;
  padding: 7px 0;
  cursor: pointer;
}

.win-btn-order {
  background: #FD3F0F;
}

/* 可用优惠券领取窗口 */
/*领取优惠券窗口*/
.win-ticket-content {
  padding: 10px 5px;
  clear: both;
  overflow: hidden;
  height: 1%;
}

.win-ticket-title {
  font-size: 14px;
  text-align: center;
  position: relative;
}

.win-ticket-title .am-close {
  top: -2px;
  right: 2px;
}

.win-ticket-integral {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
  color: #9b9b9b;
}

/*优惠券列表*/
.win-ticket-list {
  overflow-x: hidden;
  overflow-y: auto;
}

.win-ticket-item {
  background: #FFF3E5;
  margin-bottom: 10px;
  display: flex;
  justify-content: space-between;
  padding: 8px;
  border-radius: 10px;
  align-items: center;
  color: #E85D00;

}

.win-ticket-item-gray {
  color: #6F6F6F;
  background: #D3D3D3;
}

.win-ticket-item-left {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  border-right: 1px dashed #C1B1A4;
  text-align: left;

}

.win-ticket-item-lef view {
  padding: 0;
  margin: 0;
}

.win-ticket-item-left view {
  padding-left: 5px;
}

.win-ticket-item-left view b {
  font-size: 18px;
  font-weight: bold;
}

.win-ticket-item-right {
  font-size: 16px;
  width: 90px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  font-weight: bold;
  overflow: hidden;
  padding-left: 8px;
}

.coupons-usetime-win {
  font-size: 10px;
}

/* 收货地址选择窗口 */
.win-sel-receiaddr {
  position: relative;
}

.win-receiaddr-content {
  padding: 10px 0;
  clear: both;
  overflow: hidden;
}

.win-receiaddr-title {
  font-size: 14px;
  text-align: center;
  position: relative;
}

.win-receiaddr-title .am-close {
  top: -3px;
  right: 2px;
}

.win-receiaddr-list {
  overflow-x: hidden;
  overflow-y: auto;
}

.win-receiaddr-list view {
  padding: 12px;
  /* background: url(../../Imgs/Icon/address.png) left center no-repeat; */
  background-size: 10px;
  padding-left: 15px;
  border-bottom: 1px solid #f7f7f7;
  cursor: pointer;
  display: flex;
  align-items: center;
}

.win-receiaddr-btn {
  font-size: 20px;
  background: #FD3F0F;
  text-align: center;
  padding: 5px 0;
  margin-top: 10px;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  text-align: center;
}

.win-receiaddr-btn navigator {
  color: white;
  display: block;
  width: 100%;
}

/* 商品详情，额外加的 */
.product-content {
  padding-top: 8px;
  padding-bottom: 8px;
}

.product-spec-prop,
.product-bz-content {
  padding: 10px;
  font-size: 12px;
  color: #666666;
}

/* 表格的实现 */
.table-v {
  width: 100%;
  border: 1px solid #F7F7F7;
  font-size: 10px;
}

.table-tr {
  display: flex;
  align-items: center;
  justify-content: center;
}

.table-td {
  text-align: center;
  width: 50%;
  border-bottom: 1px solid #F7F7F7;
  padding: 6px;
}

.table-td-sep {
  border-right: 1px solid #F7F7F7;
}

.table-td-gray {
  color: #8F8F8F;
}



/*分享商品URL和二维码窗口*/
.share-goods-content .goods-spec-left {
  width: 80px;
  overflow: hidden;
  font-size: 12px;
  white-space: nowrap;
}

.share-goods-content .goods-spec-right {
  text-align: right;
  display: flex;
  justify-content: right;
  align-items: center;
  white-space: nowrap;
}

.share-goods-content .goods-spec-right .btn-share-goods {
  background: #FC5109;
  color: white;
  border-radius: 20px;
  width: 60px;
  padding: 8px 10px;
  border: none;
  font-size: 10px;
  margin-left: 10px;
}

.win-share-cotnent {
  padding: 10px;
  padding-top: 0;
}

.win-scan-code {
  text-align: center;
}

.win-scan-code image {
  width: 200px;
  height: 200px;
}

.win-scan-txt {
  font-size: 12px;
  font-weight: bold;
  text-align: center;
  padding-bottom: 10px;
}

.win-share-url {
  border-top: 1px solid #EDEDED;
  padding-top: 10px;
  font-size: 10px;
  overflow: hidden;
  text-align: center;
  padding-bottom: 10px;
}

.share-goods-btn button {
  background: #FC5109;
  color: white;
  border-radius: 10px;
  padding: 8px 10px;
  border: none;
  font-weight: normal;
  font-size: 14px;
}