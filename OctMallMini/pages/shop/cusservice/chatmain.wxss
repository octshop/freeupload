/* pages/shop/cusservice/chatmain.wxss */
/*店铺名称*/
.shop-name {
  padding: 6px;
  background: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8px;
}

.shop-name-left {
  padding-left: 3px;
  padding-right: 10px;
}

.shop-name-left image {
  width: 45px;
  height: 45px;
  border-radius: 25px;
}

.shop-name-mid {
  width: 100%;
  font-size: 30rpx;
}

.header-mid-bottom {
  font-size: 10px;
  font-weight: normal;
  padding: 0;
  display: flex;
  align-items: center;
  padding-top: 3px;
}

.header-mid-bottom span {
  display: flex;
  align-items: center;
}

.header-mid-bottom image {
  width: 13px;
  height: 13px;
}

.header-mid-bottom span image {
  margin-right: 1px;
  margin-top: -5px;
}

.header-span-val {
  color: #ff0000;
  padding-left: 5px;
  padding-right: 5px;
}

.btn-focus {
  width: 50px;
  font-size: 12px;
  border: 1px solid #dbdbdb;
  border-radius: 20px;
  /* background: url(../../Imgs/Icon/fav.png) 6px center no-repeat; */
  background-size: 16px;
  padding-left: 10px;
  cursor: pointer;
  margin-right: 6px;
  padding-top: 5px;
  padding-bottom: 5px;
  color: #000000;
  display: flex;
  align-items: center;
}

.btn-focus image {
  width: 30rpx;
  height: 30rpx;
}

/*聊天内容*/
.chat-content {
  padding: 4px;
  margin: 0;
}

.chat-content-item {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
}

.chat-shop-item {
  padding: 8px 5px;

}

.chat-user-header image {
  width: 43px;
  height: 43px;
  border-radius: 30px;
}

.chat-content-msg {
  background: white;
  border-radius: 5px;
  margin-left: 10px;
  margin-right: 10px;
  padding: 8px;
  width: 100%;
}

/*买家聊天内容*/
.chat-buyer-item {
  padding: 8px 5px;
}

.chat-buyer-item .chat-content-msg {
  color: white;
  background: #71ca00;
  margin-right: 10px;
}

/*底部发送聊天内容表单*/
.chat-content-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  overflow: hidden;
  width: 100%;
  z-index: 10;
  background: #ffffff;
  overflow: hidden;

  padding: 5px;
  background: #ededed;
}

.send-form {
  overflow: hidden;
}

.send-form-input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 40px;
  padding-right: 20rpx;
}

.send-form-input image {
  width: 45px;
  height: 30px;
}

.send-content-input {
  margin: 0 5px;
  width: 400px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: 3px 5px;
  border-radius: 20px;
}

.send-content-input input {
  width: 100%;
  font-size: 35rpx;
  border: none;
  padding-left: 8px;
  padding-right: 8px;
  height: 30px;
}

.send-face-content {
  height: 160px;
  background: white;
  margin-top: 5px;
  padding: 5px;
}