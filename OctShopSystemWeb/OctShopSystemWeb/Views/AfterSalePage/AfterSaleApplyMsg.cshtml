                    <label class="am-form-label">售后方式:<font color="red">*</font></label>
                    <select id="ServiceWayWin" onchange="chgServiceWay()" style="padding: 5px;">
                        <option value="Express">快递售后</option>
                        <option value="Visiting">上门服务</option>
                    </select>
                </li>
                <li>
                    <!--快递售后-->
                    <div class="as-express-win" id="ExpressAs">
                        <div>
                            <label class="am-form-label">售后联系人:<font color="red">*</font></label>
                            <input type="text" id="DeliNameWin" class="txt-css-win" />
                        </div>
                        <div>
                            <label class="am-form-label">联系电话:<font color="red">*</font></label>
                            <input type="text" id="MobileWin" class="txt-css-win" placeholder="买家售后商品发货需要，请准确填写。" />
                        </div>
                        <div>
                            <label class="am-form-label">售后地址:<font color="red">*</font></label>
                            <select id="region_province"></select>
                            <select id="region_city"></select>
                            <select id="region_county"></select>
                            <input type="text" id="DetailAddrWin" class="txt-css-win detail-addr-win" />
                        </div>
                    </div>
                    <!--上门服务-->
                    <div class="as-express-win" id="VisitingAs" style="display:none;">
                        <div>
                            <label class="am-form-label">上门人员姓名:<font color="red">*</font></label>
                            <input type="text" id="SendShopManWin" class="txt-css-win" />
