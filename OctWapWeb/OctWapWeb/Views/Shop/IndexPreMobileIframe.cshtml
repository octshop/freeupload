
@{
    Layout = null;
}

<!DOCTYPE html>

<html style="overflow: auto; overflow-x: hidden;">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>店铺首页-预览</title>
    <style type="text/css">
        html, body {
            margin: 0;
            padding: 0;
            text-align: center;
            background: #000000;
        }
    </style>
</head>
<body>

    <div style="padding-top: 8px;"></div>

    <iframe id="GoodsPreViewContentIframe" src="../Shop/Index?SID=@ViewBag.SID" height="800" width="500" name="GoodsPreView" scrolling="auto"></iframe>

    <script type="text/javascript">
        var _clientHeight = document.documentElement.clientHeight; //可视区宽度
        document.getElementById("GoodsPreViewContentIframe").height = _clientHeight - 35;
    </script>

</body>
</html>
