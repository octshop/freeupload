/* pages/buyer/shopnear/shopnear.wxss */
.title-left-addr{
  display: flex;
  align-items: center;
  justify-content: center;
}
.title-left-addr text{
  line-height: 100%;
}
/* 内容导航子菜单 */
.oct-header-bottom-nav {
  left: 0;
  position: fixed;
  background: white;
  width: 100%;
  border-bottom: 1px solid #F5F5F5;
  font-size: 24rpx;
  clear: both;
}

/*Tab选项卡*/
.tab-list {
  padding: 10px;
  background: #ffffff;
  display: flex;
  justify-content: space-around;
  border-radius: 5px;
  padding-bottom: 0;
}

.tab-item {
  text-align: center;
  position: relative;
}

.tab-item image {
  width: 45px;
  height: 40px;
  display: block;
  margin: 0 auto;
}

.bage-num {
  position: absolute;
  top: -3px;
  right: -3px;
  background: #ff0000;
  border-radius: 50%;
  color: #ffffff;
  width: 15px;
  height: 15px;
  font-size: 10px;
}

/*当前选项卡*/
.tab-item-current {
  color: red;
  border-bottom: 2px solid red;
  padding-bottom: 5px;
}

/* ===============列表=============== */
.msg-list {
  font-size: 28rpx;
}

/*订单列表*/
.order-list {
  margin-top: 8px;
  background: #ffffff;
  padding: 1px 5px;
  border-radius: 5px;
}

.order-list .order-item {
  background: white;
  margin-bottom: 10px;
}

.order-item-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 5px;
}

.order-status-txt {
  color: red;
}

/*商品列表*/
.order-item-mid {
  background: #FAFAFA;
  padding: 0 5px;
}

.order-goods-item {
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  padding-bottom: 5px;
  padding-top: 5px;
  border-bottom: 1px dashed #f4f4f4;
}

.goods-item-left {
  padding-right: 10px;
}

.goods-item-left image {
  width: 55px;
  height: 55px;
  border-radius: 2px;
}

.goods-item-mid {
  width: 100%;
  padding-right: 5px;
}

.goods-item-mid .goods-item-title {
  height: 85rpx;
}

.goods-item-mid span {
  display: block;
}

.goods-item-spec {
  color: gray;
  font-size: 10px;
}

.goods-item-right {
  text-align: right;
  display: flex;
  flex-direction: column;
  color: #b5b5b5;
  font-size: 24rpx;
}

.msg-date-time {
  color: #b5b5b5;
}

/*咨询消息*/
.customer-list {
  background: white;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 5px;
  margin-top: 8px;
  border-radius: 5px;
}

.customer-list-left {}

.customer-list-right {
  width: 100%;
}

.customer-list-left image {
  width: 55px;
  height: 55px;
  border-radius: 5px;
  margin-right: 8px;
}

.customer-right-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.customer-right-bottom {
  color: #b5b5b5;
}


/* =================显示附近商家========================== */

.oct-header-topbackground {
  background: white;
  top: 0;
  left: 0;
  width: 100%;
  position: fixed;
  z-index: 10;
}

.oct-header {
  margin: 0;
  padding: 4px 8px;
  border: none;
}

.nav-search-addr {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 67%;
}

.oct-header-shop-nav {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.sel-current-addr {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
  margin-right: 0rpx;
  cursor: pointer;
  padding: 10rpx 0;
  font-size: 30rpx;
  width: 300rpx;
  text-align: center;
}

.arrow-sel-addr-image {
  width: 60rpx;
  height: 60rpx;
}

.oct-header-sub {
  top: 50px;
}

.oct-header .goods-search {
  background: #f2f2f2;
  border-radius: 10px;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 5px;
  text-align: center;
  color: gray;
  font-size: 14px;
  cursor: pointer;
}

.goods-search image {
  width: 15px;
  height: 15px;
  margin-top: -3px;
  margin-right: 5px;
}

/* 轮播区域区域  */
.carousel {
  width: 100%;
  background-color: rebeccapurple;
}

.carousel_swiper {
  width: 100%;
  height: 280rpx;
  display: block;
  position: relative;
  background: #f4f4f4;
}

.carouselImg {
  width: 100%;
  height: inherit;
}


/* 图标导航区 */
.carousel-icon-nav {
  background: white;
  font-size: 24rpx;
}

.nav-list {
  padding: 10rpx;
