/* pages/shop/shopmsgdetail/shopmsgdetail.wxss */
/* 轮播区域 */
.carousel {
  width: 100%;
  background-color: rebeccapurple;
}

.carousel_swiper {
  width: 100%;
  height: 320rpx;
  display: block;
  position: relative;
  background: #f4f4f4;
}

.carouselImg {
  width: 100%;
  height: inherit;
}

/*店铺名称*/
.shop-name{
  padding: 6px;
  background:white;
  display:flex;
  justify-content:space-between;
  align-items:center;
  margin-top:8px;
}
.shop-name-left{
 padding-left:3px;
 padding-right: 10px;
}
.shop-name-left image {
  width: 45px;
  height: 45px;
  border-radius: 25px;
}
.shop-name-mid{
  width: 100%;
  font-size: 30rpx;
}
.header-mid-bottom {
  font-size: 10px;
  font-weight: normal;
  padding: 0;
  display: flex;
  align-items: center;
  padding-top: 3px;
}

  .header-mid-bottom span {
      display: flex;
      align-items: center;
  }

.header-mid-bottom image {
  width: 13px;
  height: 13px;
}

  .header-mid-bottom span image {
      margin-right: 1px;
      margin-top: -5px;
  }

.header-span-val {
  color: #ff0000;
  padding-left: 5px;
  padding-right: 5px;
}

.btn-focus {
  width: 60px;
  font-size: 12px;
  border: 1px solid #dbdbdb;
  border-radius: 10px;
  /* background: url(../../Imgs/Icon/fav.png) 6px center no-repeat; */
  background-size: 16px;
  padding-left: 25px;
  cursor: pointer;
  margin-right: 6px;
  padding-top: 5px;
  padding-bottom: 5px;
  color: #000000;
  display: flex;
  align-items: center;
}
.btn-focus image{
  width: 30rpx;
  height: 30rpx;
}
/*店铺评价*/
.shop-appraise{
  padding: 6px;
  background:white;
  margin-top: 8px;
  padding-bottom: 10px;
  font-size: 30rpx;
}
  .shop-appraise .header-span-val {
      color: #808080;
  }
  .shop-appraise-title {
      padding: 5px 0;
      padding-right: 6px;
      display: flex;
      justify-content: space-between;
      border-bottom: 1px solid #eeeeee;
  }
.shop-appraise-content{
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding-top: 10px;
  font-size: 28rpx;
}
.app-content-right{
  display:flex;
  align-items:center;
  justify-content:center;
}
  .app-content-right .header-span-star image {
      width: 14px;
      height: 14px;
      margin-top: -5px;
  }
.shop-basic .app-content-right{
  color:gray;
}
.shop-basic .shop-appraise-content {
  border-bottom: 1px solid #fafafa;
  padding-bottom:5px;
}
.shop-intro .shop-appraise-content{
  font-size: 12px;
}
