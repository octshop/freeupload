
@{
    Layout = null;
}

<!DOCTYPE html>

<html style="overflow: auto; overflow-x: hidden;">
<head>
    <!--
         <meta name="viewport" content="width=device-width initial-scale="1" />
     viewport是网页默认的宽度和高度，上面这行代码的意思是，网页宽度默认等于屏幕宽度（width=device-width），
     原始缩放比例（initial-scale=1）为1.0，即网页初始大小占屏幕面积的100%。 user-scalable=no  不允许缩放网页 -->
    <meta name="viewport" content="width=800,user-scalable=no" initial-scale="1" />
    <title>礼品详情</title>
    <link href="../Assets/Lib/AmazeUI-2.7.2/css/amazeui.min.css" rel="stylesheet" />
    <link href="../Assets/Lib/AdminFrame/AdminPagePublic.css" rel="stylesheet" />
    <link href="../Assets/Css/TradingPage/OrderDetail.css" rel="stylesheet" />
    <link href="../Assets/Css/UserGoodsShopPage/PresentDetail.css" rel="stylesheet" />

    <script src="../Assets/Lib/AmazeUI-2.7.2/js/jquery-2.2.2.min.js"></script>
    <script src="../Assets/Lib/AdminFrame/AdminPagePublic.js"></script>
    <script src="../Assets/Lib/AlertConfirmWin/AlertConfirmWin.js"></script>
    <script src="../Assets/Js/UserGoodsShopPage/PresentDetail.js"></script>

</head>
<body>


    <!--隐藏控件记录值-->
    <input type="hidden" id="hidPresentID" value="@ViewBag.PID" />
    <input type="hidden" id="hidOctWapWebAddrDomain" value="@ViewBag.OctWapWeb_AddrDomain" />

    <!--面包屑导航-->
    <div class="nav am-cf am-nbfc" data-am-sticky="{top:0}">
        <ul class="am-breadcrumb">
            <li><a href="../NavPage/Index" class="am-icon-home">首页</a></li>
            <li><a href="../NavPage/NavSubList?NavName=礼品管理">礼品管理</a></li>
            <li class="am-active">礼品详情</li>
        </ul>
    </div>

    <!--主体内容-->
    <div class="main am-nbfc">

        <!--标题栏-->
        <div class="main-title am-cf am-nbfc">
            <div class="title-txt-div am-fl">
                <i class="am-icon-list"></i> 礼品详情
            </div>
            <div class="title-btn-div am-fl">
                <!--<button class="title-btn am-btn am-btn-xs am-btn-danger am-round" onclick="openAddWin()"><i class="am-icon-plus-circle"></i> 添加类别</button>-->
            </div>
        </div>

        <!--操作表单-->
        <div class="form-main am-nbfc am-padding">
            <div class="order-status after-sale-status">
                <div class="order-status-title">
                    <val id="StatusTtitle">审核中</val>
                </div>
                <div class="order-status-desc">
                    <val id="StatusDesc">请相关工作人员尽快审核…</val>
                </div>
            </div>
            <dl class="order-basic">
                <dt>基本信息</dt>
                <dd>
                    <span>礼品ID：</span><val id="PresentID"></val>
                    <span>商家UserID：</span><val id="ShopUserID"></val>
                    <span>商品类目：</span><val id="GoodsTypeID">@*连衣裙(100574)*@</val>
                    <span>兑换积分：</span>&#165;<val id="PresentPrice"></val>
                    <span>礼品库存：</span><val id="StockNum">
                        2343
                    </val>
                </dd>
                <dd>
                    <span>店铺信息：</span><val id="ShopIDName">@*<a href="#" target="_blank">店铺名称(2343)</a>*@</val>
                    <span>配送方式：</span><val id="IsShopExpense"></val>
                    <span>包邮：</span><val id="IsPinkage"> </val>
                    <span>下架：</span><val id="IsUnSale"> </val>
                    <span>锁定：</span><val id="IsLock"> </val>
                </dd>
                <dd>
                    <span>发布时间：</span><val id="WriteDate"> </val>
                </dd>
                <dd>
                    <span>礼品标题：</span>
                    <val id="PresentTitle"></val>
                </dd>
                <dd>
                    <span>兑换须知：</span>
                    <val id="ExchangeNote"></val>
                </dd>
                <dd>
                    <span>礼品备注：</span>
                    <val id="PresentMemo"></val>
                </dd>

            </dl>

            <dl class="order-basic">
                <dt>礼品图片</dt>
                <dd class="order-goods-list presend-detail-img">
                    <div id="PresentImgsDiv">
                        @*<a href="../Assets/Imgs/shop_1.jpg" target="_blank"><img src="../Assets/Imgs/shop_1.jpg" /></a>*@

                    </div>
                </dd>
                <dd>
                    <a href="#" id="SeePresentDetailA" class="title-btn am-btn am-btn-xl am-btn-success am-round" target="_blank" style="padding: 6px 20px;">  查看礼品预览  </a>
                </dd>
            </dl>



        </div>

    </div>




</body>
</html>
