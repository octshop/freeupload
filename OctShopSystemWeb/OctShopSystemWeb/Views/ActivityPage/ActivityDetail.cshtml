
@{
    Layout = null;
}

<!DOCTYPE html>

<html style="overflow: auto; overflow-x: hidden;">
<head>
    <!--
         <meta name="viewport" content="width=device-width initial-scale="1" />
     viewport是网页默认的宽度和高度，上面这行代码的意思是，网页宽度默认等于屏幕宽度（width=device-width），
     原始缩放比例（initial-scale=1）为1.0，即网页初始大小占屏幕面积的100%。 user-scalable=no  不允许缩放网页 -->
    <meta name="viewport" content="width=800,user-scalable=no" initial-scale="1" />
    <title>活动详情</title>

    <link href="../Assets/Lib/AmazeUI-2.7.2/css/amazeui.min.css" rel="stylesheet" />
    <link href="../Assets/Lib/AdminFrame/AdminPagePublic.css" rel="stylesheet" />
    <link href="../Assets/Css/TradingPage/OrderDetail.css" rel="stylesheet" />

    <script src="../Assets/Lib/AmazeUI-2.7.2/js/jquery-2.2.2.min.js"></script>
    <script src="../Assets/Lib/AdminFrame/AdminPagePublic.js"></script>
    <script src="../Assets/Lib/PublicTool.js"></script>
    <script src="../Assets/Js/ActivityPage/ActivityDetail.js"></script>

    <style type="text/css">

        .activity-img-list img{
            border: 1px solid #eeeeee;
            border-radius:5px;
            padding: 5px;
            width: 200px;
            margin-right:8px;
            margin-bottom: 8px;
        }

    </style>

</head>
<body>

    <!--隐藏控件记录值-->
    <input type="hidden" id="hidActivityID" value="@ViewBag.ActivityID" />
    <input type="hidden" id="hidOctWapWebAddrDomain" value="@ViewBag.OctWapWeb_AddrDomain" />

    <!--面包屑导航-->
    <div class="nav am-cf am-nbfc" data-am-sticky="{top:0}">
        <ul class="am-breadcrumb">
            <li><a href="../NavPage/Index" class="am-icon-home">首页</a></li>
            <li><a href="../NavPage/NavSubList?NavName=活动管理">活动管理</a></li>
            <li class="am-active">活动详情</li>
        </ul>
    </div>

    <!--主体内容-->
    <div class="main am-nbfc">

        <!--标题栏-->
        <div class="main-title am-cf am-nbfc">
            <div class="title-txt-div am-fl">
                <i class="am-icon-list"></i> 活动详情
            </div>
            <div class="title-btn-div am-fl">
                <!--<button class="title-btn am-btn am-btn-xs am-btn-danger am-round" onclick="openAddWin()"><i class="am-icon-plus-circle"></i> 添加类别</button>-->
            </div>
        </div>

        <!--操作表单-->
        <div class="form-main am-nbfc am-padding">
            <div class="order-status order-status-activity">
                <div class="order-status-title">
                    <val id="StatusTtitle">审核未通过</val>
                </div>
                <div class="order-status-desc">
                    <val id="StatusDesc"></val>
                </div>
            </div>
            <dl class="order-basic">
                <dt>基本信息</dt>
                <dd>
                    <span>活动ID：</span><val id="ActivityID"> </val>
                    <span>活动类别：</span><val id="AcType">
                       
                    </val>
                    <span>开始时间：</span><val id="StartDate"> </val>
                    <span>结束时间：</span><val id="EndDate"></val>
                </dd>
                <dd class="order-goods-list">
                    <div id="AcTitle">
                        <span>
                            <b>标题：</b><a href="#" target="_blank">活动标题 </a>
                        </span>
                    </div>
                    <div id="AcSketch">
                        <span>
                            <b>活动简述：</b>  
                        </span>
                    </div>
                    <div id="AcDesc">
                        <span>
                            <b>活动描述：</b>  
                        </span>
                    </div>
                </dd>
                <dd>
                    <span>暂停加入：</span><val id="IsJoinPause"> </val>
                    <span>
                        最大活动人数：
                    </span>
                    <val id="LimitNumber">

                    </val>
                    <span>参与条件：</span><val id="LimitJoinType">
                        
                    </val>
                    <span>到场参与验证：</span><val id="IsJoinCheck"> </val>
                </dd>
            </dl>

            <dl class="order-basic">
                <dt>活动联系</dt>
                <dd>
                    <span>联系电话：</span><val id="AcMobile"> </val>
                    <span>区域范围：</span><val id="RegionNameArr"> </val>
                </dd>
                <dd>
                    <span>详细地址：</span><val id="AcAddress"> </val>
                    <span>活动位置坐标：</span><val id="Loction"></val>
                </dd>

            </dl>

            <dl class="order-basic">
                <dt>活动参与</dt>
                <dd>
                    <span>已报名：</span><val id="JoinCount">0人</val>
                    <span>已参与：</span><val id="JoinedCount">0人</val>
                    <a href="#" id="SeeJoinActivityA" style="padding:0 15px;">查看参与用户详情</a>
                </dd>
            </dl>



            <dl class="order-basic">
                <dt>活动图片</dt>
                <dd class="activity-img-list" id="ActivityImgList">
                </dd>
            </dl>




        </div>

    </div>



</body>
</html>
