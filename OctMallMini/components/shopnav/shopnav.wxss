/* components/shopnav/shopnav.wxss */
/*  子导航 */
/*头部*/
.nav-bar-sub{
  position: fixed;
  left: 0;
  height: 35px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
  padding:0rpx;
  font-size: 30rpx;
  width: 100%;
  background: white;
  border-bottom: 1px solid #EAEAEA;
  z-index: 10000000;
  height: 90px;
  padding: 0;
  margin: 0;
  overflow: hidden;
  clear: both;
  width: 100%;
  font-weight: normal;
  color: #808080;
}
.oct-header-top {
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  clear: both;
  overflow: hidden;
  width:100%;
  overflow: hidden;
}

.oct-header-left {
  width: 40px;
  height: 40px;
  padding-left: 5px;
  margin-right: 10rpx;

}

.oct-header-left image {
  width: 40px;
  height: 40px;
  border-radius: 20px;
}

.oct-header-mid {
  display: block;
  width: 100%;
}

.nav-bar-sub .header-mid-top {
  font-size: 24rpx;
  font-weight: bold;
  padding: 0;
  color: black;
}

.nav-bar-sub .header-mid-bottom {
  font-size: 10px;
  font-weight: normal;
  padding: 0;
  display: flex;
  align-items: center;
  padding-top: 3px;
}

.header-mid-bottom span {
  display: flex;
  align-items: center;
}

.nav-bar-sub .header-mid-bottom image {
  width: 13px;
  height: 13px;
}

.oct-header-right {
  width: 120px;
  overflow: hidden;
}

.header-right-top {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  padding: 0;
}

.header-mid-bottom span image {
  margin-right: 1px;
  margin-top: -5px;
}

.header-span-val {
  color: #ff0000;
  padding-left: 5px;
  padding-right: 5px;
}

.btn-focus {
  width: 60px;
  font-size: 12px;
  border: 1px solid #dbdbdb;
  border-radius: 10px;
  /* background: url(../../Imgs/Icon/fav.png) 6px center no-repeat; */
  background-size: 16px;
  cursor: pointer;
  margin-right: 6px;
  padding-top: 1px;
  padding-bottom: 1px;
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-focus image {
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
}

.btn-home {
  border: 1px solid #dbdbdb;
  border-radius: 10px;
  width: 30px;
  padding: 1px 5px;
  text-align: center;
}

.btn-home image {
  width: 15px;
  height: 15px;
}

.header-right-bottom {
  text-align: center;
  padding-right: 20rpx;
}

.header-right-bottom span {
  font-size: 10px;
  padding-left: 5px;
}

.oct-header-bottom {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #000000;
}

.oct-header-bottom view {
  width: 70px;
  text-align: center;
  margin-left: 10px;
  margin-right: 10px;
}

.oct-header-bottom .nav-current {
  border-bottom: 2px solid #ff0000;
  text-align: center;
  color: #ff0000;
  font-weight: bold;
}

.oct-header-bottom navigator {
  padding-top: 10rpx;
  display: block;
}

.oct-header-bottom .nav-current navigator {
  color: #ff0000;
}

.oct-header-bottom .header-bottom-search {
  /* background: url(../../Imgs/Icon/buyer_query.png) left 2px no-repeat; */
  background-size: 13px;
  padding-left: 12px;
  width: 200rpx;
}

.header-bottom-search image {
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
}
.shop-isself-span{
  background: red;
  color: white;
  font-size:20rpx;
  border-radius: 10px;
  padding-left: 10rpx;
  padding-right: 10rpx;
}