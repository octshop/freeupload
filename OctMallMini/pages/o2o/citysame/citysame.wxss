/* 轮播区域区域  */
.carousel {
  width: 100%;
  background-color: rebeccapurple;
}

.carousel_swiper {
  width: 100%;
  height: 280rpx;
  display: block;
  position: relative;
  background: #f4f4f4;
}

.carouselImg {
  width: 100%;
  height: inherit;
}



/* 图标导航区 */
.carousel-icon-nav {
  background: white;
  font-size: 24rpx;
}

.nav-list {
  padding: 10rpx;
  padding-top: 25rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  align-items: center;
}

.nav-list {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.nav-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  width: 60px;
}

.nav-item image {
  width: 40px;
  height: 40px;
  margin-bottom: 5px;
  border-radius: 5px;
}


/*抢购秒杀*/
.second-kill {
  background: white;
  padding: 8px;
  margin-top: 8px;
  font-size: 12px;
}

.second-kill-title {
  padding: 5px 0;
  padding-bottom: 8px;
  display: flex;
  justify-content: space-between;
  font-weight: bold;
  color: #000000;
  background: white;
}

.second-kill-arrow {
  font-weight: normal;
  /* background: url(../../Imgs/Icon/arrows_right.png) center right no-repeat; */
  background-size: 13px;
  padding-right: 0px;
  align-items: center;
  color: gray;
  margin-right: -5px;
  align-items: center;
  display: flex;
  justify-content: flex-end;
}

.second-kill-arrow image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.second-kill-list {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  align-items: center;
  padding-bottom: 3px;
  overflow: hidden;
}

.second-kill-list navigator {
  display: block;
  overflow: hidden;
  width: 25%;
}

.second-kill-list image {
  width: 100%;
  height: 80px;
  margin: 0;
  padding: 0;
}

/*横条广告*/
.gg-bar {
  width: 100%;
  height: 100px;
  overflow: hidden;
  margin-top: 8px;
}

.gg-bar image {
  width: 100%;
}

/* 推荐的商品列表 */
/*商品列表*/
.goods-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 10rpx;
  margin-top: 40rpx;
}

.goods-item {
  width: 47%;
  overflow: hidden;
  background: white;
  margin-bottom: 15px;
  border-radius: 10px;
  overflow: hidden;
  text-align: center;
}

.goods-img {
  overflow: hidden;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

.goods-img image {
  width: 100%;
  height: 350rpx;
}

.goods-name {
  font-size: 12px;
  padding: 4px;
  text-align: left;
  height: 38px;
  overflow: hidden;
}

.goods-price {
  padding: 4px;
  padding-right: 0;
  padding-top: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price b {
  color: #fc5c16;
  font-weight: normal;
  font-size: 14px;
}

.goods-price span {
  background: #fc5c16;
  font-size: 12px;
  color: white;
  padding: 0 5px;
  border-radius: 20px;
}

.goods-price .goods-price-no {
  color: gray;
  text-decoration: line-through;
  background: none;
}

.goods-price .goods-stock-residue {
  color: gray;
  background: none;
}

.goods-price view {
  font-size: 11px;
  color: #b5b5b5;
  padding-right: 5px;
}

.goods-price image {
  width: 20px;
  height: 20px;
  margin-right: 5px;
}

.goods-item {
  position: relative;
  overflow: visible;
}

.goods-item .goods-item-badge {
  background: #ff6a00;
  color: white;
  font-size: 12px;
  border-radius: 20px;
  position: absolute;
  top: -5px;
  left: -5px;
  padding-left: 5px;
  padding-right: 5px;
}