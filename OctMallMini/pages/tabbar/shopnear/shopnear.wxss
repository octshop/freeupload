.nav-item image {
  width: 40px;
  height: 40px;
}

/*中心列表广告*/
.gg-list {
  padding: 6px;
  margin: 0;
  margin-top: 6px;
  background: white;
  display: flex;
  flex-wrap: wrap;
  align-content: space-around;
  align-items: flex-start;
}

.gg-item {
  width: 50%;
  display: block;
  overflow: hidden;
  display: flex;
  align-items: flex-start;
}

.gg-item image {
  width: 100%;
  height: 240rpx;
  margin: 5rpx;
}

/*推荐商家*/
.commend-shop {
  padding: 10px 6px;
  margin-top: 6px;
  background: white;
}

.commend-shop-title {
  padding: 5px 0;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
  border-bottom: 1px solid #eaeaea;
  background: white;
}

.shop-title-right {
  color: #8a8a8a;
  font-size: 12px;
  font-weight: normal;
  padding-right: 0;
  display: flex;
  align-items: center;
}

.shop-title-right image {
  width: 13px;
  height: 13px;
  margin-left: 3px;
  margin-right: -5px;
}

/*推荐商家Item*/
.commend-item {
  padding: 0;
  margin: 0;
  background: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8px;
  border-bottom: 1px solid #f8f8f8;
  padding-bottom: 5px;
  font-size: 24rpx;
}

.commend-item-img {
  width: 75px;
}

.commend-item-img image {
  width: 75px;
  height: 75px;
  border-radius: 5px;
}

.commend-item-msg {
  width: 100%;
  padding-left: 8px;
}

.item-msg-title {
  font-size: 14px;
  color: #000000;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-msg-distance {
  font-size: 12px;
}

.item-msg-appraise {
  font-size: 12px;
  color: gray;
}

.item-msg-badge {
  font-size: 10px;
  margin-top: 10rpx;
}

.item-msg-badge span {
  display: inline-block;
  background: #ffe0ae;
  color: #ff0000;
  font-size: 10px;
  border-radius: 5px;
  padding: 1px 5px;
  margin-right: 10rpx;
}

.item-msg-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-msg-price b {
  color: red;
  font-size: 16px;
  padding-right: 5px;
}

.item-msg-sale {
  color: #9f9f9f;
  font-size: 12px;
}

/*推荐商品*/
.commend-goods {
  width: 100%;
  background: white;
  padding: 0px;
  margin-top: 6px;
  overflow: hidden;
}

.commend-goods-title {
  padding: 5px;
  padding-right: 3px;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
  border-bottom: 1px solid #eaeaea;
  background: white;
}

.goods-title-right {
  color: #8a8a8a;
  font-size: 12px;
  font-weight: normal;
  padding-right: 0;
  display: flex;
  align-items: center;
}

  .goods-title-right image {
      width: 13px;
      height: 13px;
      margin-left: 3px;
  }

.commend-goods-list {
  padding: 0;
  padding-bottom:8px;
  display:flex;
  justify-content:center;
  flex-wrap:wrap;
  align-items:center;
