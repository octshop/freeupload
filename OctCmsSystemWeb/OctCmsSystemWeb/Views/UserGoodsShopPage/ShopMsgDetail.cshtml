
@{
    Layout = null;
}

<!DOCTYPE html>

<html style="overflow: auto; overflow-x: hidden;">
<head>
    <!--
        <meta name="viewport" content="width=device-width initial-scale="1" />
    viewport是网页默认的宽度和高度，上面这行代码的意思是，网页宽度默认等于屏幕宽度（width=device-width），
    原始缩放比例（initial-scale=1）为1.0，即网页初始大小占屏幕面积的100%。 user-scalable=no  不允许缩放网页 -->
    <meta name="viewport" content="width=800,user-scalable=no" initial-scale="1" />
    <title>店铺详细</title>
    <link href="../Assets/Lib/AmazeUI-2.7.2/css/amazeui.min.css" rel="stylesheet" />
    <link href="../Assets/Lib/AdminFrame/AdminPagePublic.css" rel="stylesheet" />
    <link href="../Assets/Css/UserGoodsShopPage/ShopMsgDetail.css" rel="stylesheet" />

</head>
<body>

    <!--面包屑导航-->
    <div class="nav am-cf am-nbfc" data-am-sticky="{top:0}">
        <ul class="am-breadcrumb">
            <li><a href="../NavPage/Index" class="am-icon-home">首页</a></li>
            <li><a href="../NavPage/NavSubList?NavName=店铺管理">店铺管理</a></li>
            <li class="am-active">店铺详细</li>
        </ul>
    </div>

    <!--主体内容-->
    <div class="main am-nbfc">

        <!--标题栏-->
        <div class="main-title am-cf am-nbfc">
            <div class="title-txt-div am-fl">
                <i class="am-icon-list"></i> 店铺详细
            </div>
            <div class="title-btn-div am-fl">
                <!--<button class="title-btn am-btn am-btn-xs am-btn-danger am-round" onclick="openAddWin()"><i class="am-icon-plus-circle"></i> 添加类别</button>-->
            </div>
        </div>

        <!--详情内容-->
        <div class="form-main am-nbfc am-padding">

            <ul class="shop-main-ul">
                <li class="shop-status-li">
                    <span class="shop-status-span" style="background:@ViewBag.ShopStatusBg"><b class="am-icon-bell">&nbsp;@ViewBag.ShopStatusTxt</b><br />@ViewBag.ShopStatusDesc</span>
                    <span class="shop-status-edit"><a href="../UserGoodsShopPage/ShopEdit?UserID=@ViewBag.UserID" class="am-btn am-btn-default am-btn-xs am-round btn-add-company">修改店铺信息</a></span>
                </li>
                <li class="shop-company-li">
                    <div>
                        <span class="input-title-span">店铺账号：</span>
                        @ViewBag.UserAccount <img src="@ViewBag.HeaderImg" /> @ViewBag.UserNick，UserID：@ViewBag.UserID

                        <span style="padding-left: 20px;">店铺ID：</span> @ViewBag.ShopID
                        <span style="padding-left: 20px;">自营店铺：</span> @ViewBag.IsSelfShop
                    </div>
                    <div>
                        <span class="input-title-span">公司ID：</span>
                        @ViewBag.CompanyID，@ViewBag.CompanyName，@ViewBag.RegAddress
                    </div>
                </li>
                <li class="shop-type-li">
                    <div>
                        <span>店铺类别：</span> @ViewBag.ShopType <br />
                        <span>店铺名称：</span>@ViewBag.ShopName
                    </div>
                    <div>
                        <span>店铺头像：</span><img class="shop-header-img" src="//@ViewBag.ShopHeaderImg" />
                    </div>
                </li>
                <li class="shop-logo-li">
                    <div>
                        <span>店铺门头照：</span>
                    </div>
                    <div class="shop-logo-img">
                        @Html.Raw(ViewBag.Xhtml)
                    </div>
                </li>
                <li class="shop-link-addr">
                    <div>
                        <span class="span-left">有实体店：</span>@ViewBag.IsEntity
                        <span>位置信息:</span>纬度 =&nbsp; @ViewBag.Latitude ，经度 =&nbsp; @ViewBag.Longitude
                    </div>
                    <div>
                        <span class="span-left">店铺地址：</span>@ViewBag.RegionNameArr_@ViewBag.DetailAddr
                    </div>
                    <div>
                        <span class="span-left">固定电话:</span>@ViewBag.ShopFixTel <span>店铺手机号:</span>@ViewBag.ShopMobile <span>发货电话:</span>@ViewBag.SendMobile
                    </div>
                    <div>
                        <span class="span-left">联系人: </span>@ViewBag.LinkMan<span>联系人手机:</span>@ViewBag.LinkManMobile   <span>联系人邮箱:</span>@ViewBag.LinkEmail
                    </div>
                </li>
                <li class="shop-key-desc">
                    <div>
                        <div><span>搜索关键字：</span></div>
                        <div>
                            @ViewBag.SearchKey
                        </div>
                    </div>
                    <div>
                        <div><span>主营商品：</span></div>
                        <div>
                            @ViewBag.MajorGoods
                        </div>
                    </div>
                    <div>
                        <div><span>店铺描述：</span></div>
                        <div>
                            @ViewBag.ShopDesc
                        </div>
                    </div>
                </li>



            </ul>

        </div>

    </div>



</body>
</html>
