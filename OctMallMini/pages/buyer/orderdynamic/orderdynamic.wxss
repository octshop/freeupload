/* pages/buyer/orderdynamic/orderdynamic.wxss */
/*订单动态列表*/
.order-dynamic-list{

}
.order-dynamic-item navigator {
    background: white;
    padding: 6px;
    margin: 5px;
    margin-top: 6px;
    display: flex;
    align-items: center;
    font-size: 12px;
    border-radius: 5px;
}
.dynamic-item-left {
    width: 90px;
    text-align: center;
    overflow: hidden;
    color: #a1a1a1;
}
.dynamic-item-mid {
    border-left: 1px solid #e4e4e4;
    height: 60px;
    margin-right: 10px;
    margin-left: 10px;
}
.dynamic-circle {
    width: 10px;
    height: 10px;
    background: #a1a1a1;
    border-radius: 20px;
    margin-top: 25px;
    margin-left: -5px;
}
.dynamic-item-right {
    width: 100%;
    color: #a1a1a1
}
/*当前动态*/
.order-dynamic-item-current .dynamic-item-left{
    color: #000000;
}
.order-dynamic-item-current .dynamic-item-right {
    color: #000000;
}
.order-dynamic-item-current .dynamic-circle{
    background: #ff0000;
}