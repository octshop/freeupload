/* pages/mall/discountgoods/discountgoods.wxss */

/*商品列表*/
.goods-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 10rpx;
  margin-top: 40rpx;
}

.goods-item {
  width: 47%;
  overflow: hidden;
  background: white;
  margin-bottom: 15px;
  border-radius: 10px;
  overflow: hidden;
  text-align: center;
}

.goods-img {
  overflow: hidden;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

.goods-img image {
  width: 100%;
  height: 350rpx;
}

.goods-name {
  font-size: 12px;
  padding: 4px;
  text-align: left;
  height: 38px;
}

.goods-price {
  padding: 4px;
  padding-right: 0;
  padding-top: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price b {
  color: #fc5c16;
  font-weight: normal;
  font-size: 14px;
}

.goods-price span {
  background: #fc5c16;
  font-size: 12px;
  color: white;
  padding: 0 5px;
  border-radius: 20px;
}

.goods-price .goods-price-no {
  color: gray;
  text-decoration: line-through;
  background: none;
}

.goods-price .goods-stock-residue {
  color: gray;
  background: none;
}

.goods-price view {
  font-size: 11px;
  color: #b5b5b5;
  padding-right: 5px;
}

.goods-price image {
  width: 20px;
  height: 20px;
  margin-right: 5px;
}

.goods-item {
  position: relative;
  overflow: visible;
}

.goods-item .goods-item-badge {
  background: #ff6a00;
  color: white;
  font-size: 12px;
  border-radius: 20px;
  position: absolute;
  top: -5px;
  left: -5px;
  padding-left: 5px;
  padding-right: 5px;
}





/* 查询类别导航 */
.oct-header-bottom-nav {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  left: 0;
  position: fixed;
  background: white;
  width: 100%;
  z-index: 2000;
}

.oct-header-bottom-nav view {
  color: #000000;
  text-align: center;
  font-size: 30rpx;
  padding: 8px 0;
}

.oct-header-bottom-nav .nav-item-current {
  color: red;
}

.oct-header-bottom-nav view image {
  width: 12px;
  height: 12px;
}

.oct-content {
  padding: 20rpx 10rpx;
}

/* 价格 */
.oct-header-bottom-nav .filter-price {
  width: 50px;
}

/* 筛选 */
.oct-header-bottom-nav .filter-where {
  width: 50px;
  font-size: 32rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.oct-header-bottom-nav .filter-where image {
  width: 35rpx;
  height: 35rpx;
  margin-top: 10rpx;
}



/* 弹出层- 条件选择 */
.oct-header-bottom-nav .filter-area {
  display: flex;
  align-items: center;
  justify-content: center;
  color: red;
}

.oct-header-bottom-nav .filter-other-cur {
  color: red;
}

.oct-header-bottom-nav .filter-area image {
  width: 6px;
  height: 6px;
  margin-left: 5px;
}

/* 条件选择层区 */
.all-filer-show {
  clear: both;
  background: white;
  padding: 6px;
  padding-bottom: 20rpx;
  position: fixed;
  top: 80px;
  left: 0;
  z-index: 10000;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  font-size: 25rpx;
  border-bottom: 1px solid #E0E0E0;
  overflow: hidden;
}

/* 地区选择样式 */
.filer-area-win {
  width: 100%;
  height: 100px;
  overflow-y: auto;
  overflow-x: hidden;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
}

.filer-area-win view {
  font-size: 12px;
  background: #EDEDED;
  padding: 0px 6px;
  margin: 5px;
  border-radius: 5px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 25px;
}

.filer-area-win view.sel-filter-cur {
  color: white;
  background: #ff6a00;
}