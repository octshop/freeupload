    <!---------------审核确认窗口---------------->
    <div class="check-confirm-win" id="CheckConfirmWin" style="display:none;">
        <div class="check-confirm-main">
            <ul class="check-confirm-ul">
                <li class="as-order-msg">
                    <label class="am-form-label">售后ID:</label>
                    <a id="ApplyIDA" href="#" target="_blank">…加载中…</a>
                    <label class="am-form-label">订单ID:</label>
                    <a id="OrderIDA" href="#" target="_blank"></a>
                    <label class="am-form-label">商品ID:</label>
                    <a id="GoodsIDA" href="#" target="_blank"></a>
                </li>
                <li>
                    <div class="refund-msg" id="RefundMsg" style="display:none;">
                        <div class="refund-msg-item">
                            <label class="am-form-label">商品单价:</label>
                            <span id="GoodsUnitPriceSpan">&#165;234.23</span>
                            <label class="am-form-label">申请数量:</label>
                            <span id="ApplyGoodsNumSpan">23</span>
                        </div>
                        <div class="refund-msg-item">
                            <label class="am-form-label">退款金额:<font color="red">*</font></label>
                            <input type="number" id="RefundMoneyWin" class="txt-css-win" style="color:orangered;font-weight:bold" placeholder="请输入退款金额，以‘元’为单位" />
                        </div>
                    </div>
                </li>

