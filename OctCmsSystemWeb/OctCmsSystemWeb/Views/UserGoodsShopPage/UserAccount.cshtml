                        <td>oJqPLjpimgNZWMk11naTNP0dDn3Y<i style="color:gray;display:block;">ov1Mrt5nKKhU-SRNcj6UsLTVVFzY</i></td>
                        <td>
                            已开通<i style="color: gray;display: block;"><a href="#" target="_blank">店铺名称店铺名称</a></i>
                        </td>
                        <td>备注呀备注</td>
                        <td>否<i style="color:gray;display:block;">可转入</i></td>
                        <td>2019-05-05 13:27:45</td>
                        <td>
                            <button class="table-btn am-btn am-btn-default am-btn-xs am-text-secondary am-round">详情</button>
                            <button class="table-btn am-btn am-btn-default am-btn-xs am-text-warning am-round">修改</button>
                        </td>
                    </tr>
                </tbody>
            </table>

            <!--表格信息操作区与分页-->
            <div class="table-exe-div am-cf">
                <div class="table-exe-btn am-fl">
                    <div class="table-btn-bottom am-btn-group am-btn-group-xs">
                        <button type="button" class="am-btn am-btn-default" onclick="tglLockUserAccountArr('true')"><span class="am-icon-lock"></span> 批量锁定</button>
                        <button type="button" class="am-btn am-btn-default" onclick="tglLockUserAccountArr('false')"><span class="am-icon-unlock"></span> 批量解锁</button>
                    </div>
                </div>
                <div class="page-bar am-fr">
                    <ul class="am-pagination" id="PageBar1">
                        <li><a href="#">«</a></li>
                        <li><a href="#">1</a></li>
                        <li><span>...</span></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li class="am-active"><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#">6</a></li>
                        <li><span>...</span></li>
                        <li><a href="#">500</a></li>
                        <li><input type="text" class="page-go-text am-form-field" placeholder="跳转页" /></li>
                        <li><a href="#">»</a></li>
                    </ul>
                </div>
            </div>

            <!--备注说明-->
            <div class="memo-content">
                注意: <span>备注</span>
            </div>


        </div>
    </div>



    <!--添加与编辑窗口主体内容-->
    <div class="add-edit-win" id="AddEditWin" style="display:none;">
        <div class="add-edit-main">
            <ul class="add-edit-ul">
                <li>
                    <label class="am-form-label">用户UserID:<font color="red">*</font></label>
                    <b id="UserIDWin">234324(昵称)</b>
                </li>
                <li>
                    <label class="am-form-label">是否分润转入:<font color="red">*</font></label>
                    <select id="IsTransDividendWin">
                        <option value="false">不可转入</option>
                        <option value="true">可以转入</option>
                    </select>
                </li>
                <li>
                    <label class="am-form-label">账号备注:</label>
                    <input type="text" style="margin-left: 15px;" id="AccountMemoWin" class="am-form-field txt-css" />
                </li>
            </ul>
