/* pages/buyer/goodstype/goodstype.wxss */
page {
  overflow: hidden;
}

/* Tab导航 */
.oct-header-tab {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-top: 0;
  margin-top: 0rpx;
}

.oct-header-tab view,
.oct-header-tab .header-tab-search {
  width: 130rpx;
  font-size: 35rpx;
  padding: 10rpx;
  padding-top: 0;
  margin-top: -10rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-tab-current {
  border-bottom: 2px solid red;
  color: red;
}

.oct-header-tab .header-tab-search {
  width: 200rpx;
  justify-content: flex-end;
}

.header-tab-image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

/* 主体内容 */
.scroll-view-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  width: 100%;
  overflow: hidden;
  clear: both;
}

/* 左边的ScrollView */

.scroll-view-left {
  width: 310rpx;
  text-align: center;
  background: #F7F7F7;
  overflow: hidden;
}

.type-nav-left {
  text-align: center;
}

.type-nav-left view {
  padding-top: 7rpx;
  padding-bottom: 7rpx;
  cursor: pointer;
  font-size: 34rpx;
}

.type-nav-current {
  background: white;
  color: red;
}

/* 右边的ScrollView */
.scroll-view-right {
  width: 100%;
  background: white;
}

.type-nav-right {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
}

.type-nav-right view {
  width: 150rpx;
  height: 230rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 25rpx;
  margin: 0rpx 10rpx;
  text-align: center;
}

.type-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-bottom: 5px;
}