
@{
    Layout = null;
}

<!DOCTYPE html>

<html style="overflow: auto; overflow-x: hidden;">
<head>
    <!--
        <meta name="viewport" content="width=device-width initial-scale="1" />
    viewport是网页默认的宽度和高度，上面这行代码的意思是，网页宽度默认等于屏幕宽度（width=device-width），
    原始缩放比例（initial-scale=1）为1.0，即网页初始大小占屏幕面积的100%。 user-scalable=no  不允许缩放网页 -->
    <meta name="viewport" content="width=800,user-scalable=no" initial-scale="1" />
    <title>积分设置</title>
    <link href="../Assets/Lib/AmazeUI-2.7.2/css/amazeui.min.css" rel="stylesheet" />
    <link href="../Assets/Lib/AdminFrame/AdminPagePublic.css" rel="stylesheet" />
    <link href="../Assets/Css/IntegralPage/IntegralMy.css" rel="stylesheet" />
    <link href="../Assets/Css/IntegralPage/IntegralSetting.css" rel="stylesheet" />

    <script src="../Assets/Lib/AmazeUI-2.7.2/js/jquery-2.2.2.min.js"></script>
    <script src="../Assets/Lib/AmazeUI-2.7.2/js/amazeui.min.js"></script>
    <script src="../Assets/Lib/PublicTool.js"></script>
    <script src="../Assets/Lib/AdminFrame/AdminPagePublic.js"></script>
    <script src="../Assets/Lib/AlertConfirmWin/AlertConfirmWin.js"></script>
    <script src="../Assets/Lib/DialogWinDrag/DialogWinDrag.js"></script>
    <script src="../Assets/Js/IntegralPage/IntegralSetting.js"></script>


</head>
<body>

    <!--隐藏控件记录值-->
    <input type="hidden" id="hidOctWapWebAddrDomain" value="@ViewBag.OctWapWeb_AddrDomain" />


    <!--面包屑导航-->
    <div class="nav am-cf am-nbfc" data-am-sticky="{top:0}">
        <ul class="am-breadcrumb">
            <li><a href="../NavPage/Index" class="am-icon-home">首页</a></li>
            <li><a href="../NavPage/NavSubList?NavName=积分管理">积分管理</a></li>
            <li class="am-active">积分设置</li>
        </ul>
    </div>

    <!--主体内容-->
    <div class="main am-nbfc" style="min-height: 600px;">

        <!--标题栏-->
        <div class="main-title am-cf am-nbfc">
            <div class="title-txt-div am-fl">
                <i class="am-icon-list"></i> 积分设置
            </div>
            <div class="title-btn-div am-fl">
                <!--<button class="title-btn am-btn am-btn-xs am-btn-danger am-round" onclick="window.location.href='../TradingPage/VerifyCheckCodeOrderStatus'"><i class="am-icon-get-pocket"></i> 订单核销验证</button>-->
            </div>
        </div>

        <div class="main-msg am-cf am-nbfc">
            <span>我的积分：</span><b id="ShopCurrentIntegralB">0.0</b> <button class="title-btn am-btn am-btn-xs am-btn-danger am-round" onclick="openAddWin()"><i class="am-icon-plus-circle"></i> &nbsp;添加积分规则</button>
            <button class="title-btn am-btn am-btn-xs am-btn-default am-round" onclick="window.location.href='#'"><i class="am-icon-question" style="font-size:16px"></i>  &nbsp;积分规则说明</button>
        </div>

        <!--搜索栏-->
        <div class="search-bar am-btn-toolbar am-cf">

            <div class="am-btn-group am-btn-group-xs am-cf" style="width: 230px;">
                <select id="InSettingType_se" data-am-selected="{btnWidth:'220',btnSize: 'xs',btnStyle: 'default'}">
                    <option value=" " selected>积分规则类型(不限)</option>
                    <option value="Appraise">商品评价</option>
                    <option value="AppraiseImg">买家晒单</option>
                    <option value="BuyGoods">购买商品</option>
                </select>
            </div>
            <div class="am-btn-group am-btn-group-xs am-cf item-txt-css">
                <input type="number" class="keyword-input am-form-field am-fl" id="GoodsID_se" placeholder="商品ID" />
            </div>
            <div class="am-btn-group am-btn-group-xs am-cf item-txt-css">
                <input type="number" class="keyword-input am-form-field am-fl" id="IntegralPrice_se" placeholder="赠送积分值" />
            </div>

            <div class="am-btn-group am-btn-group-xs am-cf" style="width: 130px;">
                <select id="IsLock_se" data-am-selected="{btnWidth:'120',btnSize: 'xs',btnStyle: 'default'}">
                    <option value=" " selected>否是启用(不限)</option>
                    <option value="false">已启用</option>
                    <option value="true">已暂停</option>
                </select>
            </div>

            <div class="datetime-div am-btn-group am-btn-group-xs am-cf" style="width: 150px;">
                <div class="am-form-group am-form-icon">
                    <i class="am-icon-calendar"></i>
                    <input type="text" id="WriteDate_se" class="datetime-input am-form-field" style="background:white; width: 150px;" placeholder="新建时间" data-am-datepicker="{theme: 'success',}" readonly>
                </div>
            </div>
            <div class="am-btn-group am-btn-group-xs am-cf" style="width: 210px;">
                <button type="button" id="btnSearch" class="search-btn am-fl am-btn am-radius am-btn-success">搜索</button>
            </div>


        </div>

        <!--表单区域-->
        <div class="table-div">

            <table class="table-content am-table-striped am-table-hover" width="100%">
                <thead>
                    <tr class="table-head am-success">
                        <td width="10%">积分规则ID</td>
                        <td width="16%">规则类型</td>
                        <td width="23%">关联商品ID</td>
                        <td width="13%">赠送积分值</td>
                        <td width="10%">是否启用</td>
                        <td width="14%">新建日期</td>
                        <td width="14%">操作</td>
                    </tr>
                </thead>
                <tbody id="TbodyTrPage">
                    <tr>
                        <td>23423</td>
                        <td>商品评价(Appraise)</td>
                        <td><a href="#" target="_blank">2342</a></td>
                        <td>235.32</td>
                        <td>已启用</td>
                        <td>2019-05-05 13:27:45</td>
                        <td>
                            <button class="table-btn am-btn am-btn-default am-btn-xs am-text-secondary am-round" style="margin-bottom:2px">启用</button>
                            <button class="table-btn am-btn am-btn-default am-btn-xs am-text-secondary am-round" style="margin-bottom:2px">修改</button>
                        </td>
                    </tr>
                </tbody>
            </table>

            <!--表格信息操作区与分页-->
            <div class="table-exe-div am-cf">
                <div class="table-exe-btn am-fl">
                    <div class="table-btn-bottom am-btn-group am-btn-group-xs">
                        <!--<button type="button" class="am-btn am-btn-default" onclick="confirmPayDeliveryMul()">确认货到付款</button>-->
                    </div>
                </div>
                <div class="page-bar am-fr">
                    <ul class="am-pagination" id="PageBar1">
                        <li><a href="#">«</a></li>
                        <li><a href="#">1</a></li>
                        <li><span>...</span></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li class="am-active"><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#">6</a></li>
                        <li><span>...</span></li>
                        <li><a href="#">500</a></li>
                        <li><input type="text" class="page-go-text am-form-field" placeholder="跳转页" /></li>
                        <li><a href="#">»</a></li>
                    </ul>
                </div>
            </div>

            <!--备注说明-->
            <div class="memo-content">
                注意: <span>一个积分等于一块钱</span>
            </div>
        </div>

    </div>

    <!-------------添加与编辑窗口----------------->
    <div class="add-edit-win" id="AddEditWin" style="display:none;">
        <div class="add-edit-main">
            <ul class="add-edit-ul">
                <li>
                    <label class="am-form-label">
                        规则类型:<font color="red">*</font>
                    </label>
                    <select id="InSettingType_ae">
                        <option value="Appraise">商品评价</option>
                        <option value="AppraiseImg">买家晒单</option>
                        <option value="BuyGoods">购买商品</option>
                    </select>
                    <span class="win-prompt-span">提示：返回积分规则类型</span>
                </li>
                <li>
                    <label class="am-form-label">商品ID:<font color="red">*</font></label>
                    <input type="number" id="GoodsID_ae" onblur="initGoodsMsg()" class="txt-css" style="width: 250px" />
                </li>
                <li>
                    <a id="ShowGoodsNameA" href="#" target="_blank">请输入商品ID</a>
                </li>
                <li>
                    <label class="am-form-label">返积分值:</label>
                    <input type="number" id="IntegralPrice_ae" class="txt-css" style="width: 250px" />
                    <span class="win-prompt-span">提示：一个积分等于一块钱</span>
                </li>
            </ul>
        </div>
    </div>


</body>
</html>
