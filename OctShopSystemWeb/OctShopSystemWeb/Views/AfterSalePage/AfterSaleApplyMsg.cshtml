            </div>

            <div class="am-btn-group am-btn-group-xs am-cf" style="width: 130px;">
                <select id="ServiceType_se" data-am-selected="{btnWidth:'120',btnSize: 'xs',btnStyle: 'default'}">
                    <option value=" " selected>服务类型(不限)</option>
                    <option value="barter">换货</option>
                    <option value="maintain">维修</option>
                    <option value="refund">退货</option>
                </select>
            </div>

            <div class="am-btn-group am-btn-group-xs am-cf" style="width: 130px;">
                <select id="ServiceWay_se" data-am-selected="{btnWidth:'120',btnSize: 'xs',btnStyle: 'default'}">
                    <option value=" " selected>售后方式(不限)</option>
                    <option value="Express">快递售后</option>
                    <option value="Visiting">上门服务</option>
                </select>
            </div>

            <div class="am-btn-group am-btn-group-xs am-cf" style="width: 130px;">
                <select id="ApplyReason_se" data-am-selected="{btnWidth:'120',btnSize: 'xs',btnStyle: 'default'}">
                    <option value=" " selected>申请原因(不限)</option>
                    <option value="质量问题">质量问题</option>
                    <option value="商品故障">商品故障</option>
                    <option value="其他问题">其他问题</option>
                </select>
            </div>


            <div class="datetime-div am-btn-group am-btn-group-xs am-cf" style="width: 150px;">
                <div class="am-form-group am-form-icon">
                    <i class="am-icon-calendar"></i>
                    <input type="text" id="WriteDate_se" class="datetime-input am-form-field" style="background:white; width: 150px;" value="@ViewBag.WriteDate" placeholder="申请时间" data-am-datepicker="{theme: 'success',}" readonly>
                </div>
            </div>



            <div class="am-btn-group am-btn-group-xs am-cf" style="width: 210px;">
                <button type="button" id="btnSearch" class="search-btn am-fl am-btn am-radius am-btn-success">搜索</button>
            </div>


        </div>

        <!--表单区域-->
        <div class="table-div">

            <table class="table-content am-table-striped am-table-hover" width="100%">
                <thead>
                    <tr class="table-head am-success">
                        <td width="3%" height="22"><input type="checkbox" id="SelAllCb" name="SelAllCb" onchange="toggleSelAll()" /></td>
                        <td width="8%">售后ID</td>
                        <td width="8%">订单ID</td>
                        <td width="15%">商品ID</td>
                        <td width="10%">售后状态</td>
                        <td width="8%">服务类型</td>
                        <td width="9%">申请原因</td>
                        <td width="9%">售后方式</td>
                        <td width="10%">备注(仅商家可见)</td>
                        <td width="9%">申请时间<!--<div class="table-header-extra">订购时间</div>--></td>
                        <td width="11%">操作</td>
                    </tr>
                </thead>
                <tbody id="TbodyTrPage">
                    <tr>
                        <td><input type="checkbox" /></td>
                        <td><a href="#" target="_blank">23432</a></td>
                        <td><a href="#" target="_blank">23432</a></td>
